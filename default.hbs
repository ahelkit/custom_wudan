<body class="{{body_class}}">
{{! Site wrapper: }}<div class='sitewrap_nix'>

{{! Document header: }}<header class="header_nix" role='banner' itemscope itemtype='http://schema.org/WPHeader' {{#if @blog.cover}}style="background-image: url({{@blog.cover}});background-repeat:no-repeat"{{/if}}>
{{#if @blog.logo}}<a class="logo_nix" href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="{{@blog.title}}" /></a>{{/if}}
<p class="nix_blogdescription">{{@blog.description}}</p>
</header>{{! /Document header }}
{{! Decorative header bottom:/ }}<div class="headerbottom_nix"></div>

<div class="row">
	<div id="content" class="col-8">
		<main class="nixclear"><div class="search-results"></div>{{{body}}}</main>{{! Document main:/ }}
	</div>
	<div id="sidebar" class="col-4">{{> sidebar}}</div>{{! Document sidebar }}
</div>

{{! Document footer: }}<footer class="footer_nix nixclear" itemscope itemtype='https://schema.org/WPFooter'>
<div class="subscribe_nix"><a href="{{@blog.url}}/rss/" title="Subscribe!"><i class="nix_icon-rss"></i></a></div>
<div class="footertext_nix">All content copyright <a href="/">{{@blog.title}}</a> &copy; 2013 &bull; All rights reserved.</div>
<div class="footertext_nix">Proudly published with <a class="icon-ghost" href="http://tryghost.org">Ghost</a></div>
</footer>{{! /Document footer }}

</div>{{! /Site wrapper }}
